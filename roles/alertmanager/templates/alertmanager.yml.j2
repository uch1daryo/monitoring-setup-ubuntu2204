global:
  smtp_smarthost: {{ smtp_smarthost }}
  smtp_from: {{ smtp_from }}
  smtp_auth_username: {{ smtp_auth_username }}
  smtp_auth_password: {{ smtp_auth_password }}

route:
  group_by: ['alertname']
  group_wait: 10s
  group_interval: 10s
  repeat_interval: 1h
  receiver: alert-email

receivers:
  - name: alert-email
    email_configs:
      - to: {{ smtp_to }}
